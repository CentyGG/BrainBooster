<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5d90ad"
    tools:context=".presentation.memoryGame.MemoryGameFragment">
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sf_pro_text_heavy"
        android:text="Brain Booster"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawablePadding="5dp"

        android:text="0"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:drawableStartCompat="@drawable/free_icon_font_trophy_3914267"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAppName" />
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel7"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel8"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/panel9"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_state"
            android:elevation="10dp" />


    </GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>



